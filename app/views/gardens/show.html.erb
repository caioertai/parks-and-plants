<div class="banner mb-4"
     style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.banner_image_url %>);
">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @garden.plants.each do |plant| %>
      <div class="col-4">
        <div class="card-trip">
          <img src="<%= plant.image_url %>" />
          <div class="card-trip-infos">
            <div>
              <h2><%= plant.name %></h2>
              <%= link_to 'Delete', plant_path(plant), method: :delete, 'data-confirm': 'Are you sure?' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="col-4">
      <%= link_to new_garden_plant_path(@garden), class: 'card-trip' do %>
        <img src="https://place-hold.it/320x240/a00/fff/?text=Add%20New%20Plant" />
        <div class="card-trip-infos">
          <div>
            <h2>Add New Plant</h2>
          </div>
        </div      
      <% end %>
    </div>
  </div>
</div>
